<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Forgot1">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="#FFFFFF" Padding="20">
                <StackLayout Orientation="Horizontal">
                    <Image Aspect="AspectFit" WidthRequest="150" HeightRequest="100"  Margin="-20,0,0,0" HorizontalOptions="Center" Source="photo.png" />
                    <Label Text="Восстановление" HorizontalTextAlignment="Center" Margin="-45,35,25,0" TextColor="#000000" FontSize="28"/>
                </StackLayout>

                <Frame HeightRequest="35" Margin="0,20,0,0" BackgroundColor="#F1F1F1" CornerRadius="5">
                    <Entry Placeholder="Код доступа" PlaceholderColor="#000000" FontSize="14" IsPassword="True"/>
                </Frame>

                <Button Text="Восстановить" Margin="0,20,0,0" CornerRadius="5" FontSize="20" BackgroundColor="#2194F3" TextColor="White" Clicked="OnRestoreClicked"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>